# ----------------------------------------------------------------
# Rundeck server connection information
# ----------------------------------------------------------------

framework.server.name = {{ rundeck_address }}
framework.server.hostname = {{ rundeck_address }}
framework.server.port = {{ rundeck_port }}
framework.server.url = {{ rundeck_url }}

# ----------------------------------------------------------------
# Installation locations
# ----------------------------------------------------------------

rdeck.base={{ rundeck_rdeckbase }}

framework.projects.dir={{ rundeck_rdeckbase }}/projects
framework.etc.dir=/etc/rundeck
framework.var.dir={{ rundeck_rdeckbase }}/var
framework.tmp.dir={{ rundeck_rdeckbase }}/var/tmp
framework.logs.dir={{ rundeck_rdeckbase }}/var/logs
framework.libext.dir={{ rundeck_rdeckbase }}/libext

# ----------------------------------------------------------------
# SSH defaults for node executor and file copier
# ----------------------------------------------------------------

# framework.ssh.keypath = /var/lib/rundeck/.ssh/id_rsa
# framework.ssh.user = rundeck

# ssh connection timeout after a specified number of milliseconds.
# "0" value means wait forever.
framework.ssh.timeout = 0

framework.rundeck.execution.script.tokenexpansion.enabled = true

